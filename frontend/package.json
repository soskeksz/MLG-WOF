{
  "name": "wheel-of-fortune",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "powershell -Command \"if (Test-Path '.next') { Remove-Item -Recurse -Force '.next' }\" && next dev",
    "dev:mem": "set NODE_OPTIONS=\"--max-old-space-size=4096\" && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "mongoose": "^8.14.2",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "prettier": "^3.5.3"
  }

}
